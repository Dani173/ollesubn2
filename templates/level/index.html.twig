{% extends 'base.html.twig' %}

{% block title %}Level{% endblock %}

{% block body %}
    <p id="subtitulo">Rutina por Niveles</p>
    {% for level in levels %}
        <div id="rutinabloque">
            {% if  level.price  > 0 %}

                <a href="{{ path('level',{'id':level.id} )}}"><h1 style="color: red">{{ level.name }}</h1>
                    <h2 style="color: red">{{ level.price }}€</h2></a>
            {% else %}
                <a  href="{{ path('level',{'id':level.id} )}}"><h1>{{  level.name }}</h1>
                    <h2>{{ level.price }}€</h2></a>
            {% endif %}


        </div>

    {% endfor %}
{% endblock %}
