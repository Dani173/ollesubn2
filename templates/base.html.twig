<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>{% block title %}CaliDAW{% endblock %}</title>

    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('css/sticky-footer-navbar.css') }}">
        <link href="https://fonts.googleapis.com/css?family=Rationale" rel="stylesheet">

    {% endblock %}

</head>

<body>
<div id="menu">
    <div id="menui"><p id="logo"><a id="letra-logo" href="{{ path('app_homepage') }}">CALIDAW</a>
    </div>
    <div id="menum"><ul>
            <li id="focus"><a class="letra-menu separacion" href="{{ path('muscle') }}">Ejercicios</a></li>
            <li><a class="letra-menu separacion" href="{{ path('app_level') }}">Rutinas</a></li>
            <li><a class="letra-menu separacion" href="{{ path('nutrition') }}">Nutrición</a></li>
            <li><a class="letra-menu separacion" href="#slide-four">Asesoramiento</a></li>
        </ul>
    </div>
    <div id="menud">
        {% if app.user is null %}
        <button id="login-button" class="inicios" href="{{ path('app_login') }}">Iniciar Sesión</button>
        <div class="login-container">
            <form class="login-form" action="{{ path('app_login') }}" method="post">

                <input type="text" placeholder="Email" id="email" name="_username" class="form-control"/>


                <input type="password" placeholder="Contraseña" id="password" name="_password" class="form-control"/>

                <button id="entrar" type="submit" class="btn btn-success">Ir</button>
            </form>
        </div>
        <a id="reg-button" class="registro" href="{{ path('app_register') }}" >Registrarse</a>
    </div>
    {% else %}
        <a class="nav-link" href="{{ path('app_perfil') }}">Perfil</a>
        <a class="nav-link" href="{{ path('app_logout') }}">Salir</a>
    {% endif %}
</div>
</div>

{% block body %}{% endblock %}
<script  src="js/index.js"></script>
<script src='http://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js'></script>
<script  src="js/indexx.js"></script>

<footer><div id="debajo">
        <ul>
            <li><a class="letra-footer separacionfooter separacion" href="#slide-two">Facebook</a></li>
            <li><a class="letra-footer separacion" href="#slide-three">Twitter</a></li>
            <li><a class="letra-footer separacion" href="#slide-four">Pinterest</a></li>
            <li><a class="letra-footer separacion" href="#slide-four">Instagram</a></li>
            <li><a class="letra-footer separacion" href="#slide-four">Youtube</a></li>
        </ul></div></footer>

</div>






</body>

</html>
